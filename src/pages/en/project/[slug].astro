---
import Layout from '../../../layouts/Layout.astro';
import data from '../../../data/projects.json';
import {useTranslations, getLangFromUrl} from '../../../i18n/utils';
import {defaultLang} from '../../../i18n/ui';

const {slug} = Astro.params;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const projets = data[lang as keyof typeof data];
const projet = projets.find((p) => p.id === Number(slug));

const backToHomePath = () => {
    const basePath = import.meta.env.BASE_URL;
    if (lang === defaultLang) {
        return basePath ? basePath : '/';
    }
    return `${basePath}/${lang}`;
};
---

<Layout title={projet?.name || t('projects.notFound')} lang={lang}>
    <main class="container">
        {
            projet ? (
                <div class="card-projet">
                    <div class="card-header">
                        <h2>{projet.name}</h2>
                    </div>
                    <div class="card-content">
                        <p>
                            <strong>{t('projects.label')}:</strong> {projet.label}
                        </p>
                        <p>
                            <strong>{t('projects.company')}:</strong> {projet.company}
                        </p>
                        <p>
                            <strong>{t('projects.startingDate')}:</strong> {projet.startingDate}
                        </p>
                        <p>
                            <strong>{t('projects.endingDate')}:</strong> {projet.endingDate}
                        </p>
                        <p>
                            <strong>{t('projects.location')}:</strong> {projet.location}
                        </p>
                        <p>
                            <strong>{t('projects.technologies')}:</strong> {projet.technologies.join(', ')}
                        </p>
                        <p>
                            <strong>{t('projects.description')}:</strong> {projet.description}
                        </p>
                    </div>
                    <div class="card-footer">
                        <a href={backToHomePath()} class="back-link">
                            {t('projects.backToHome')}
                        </a>
                    </div>
                </div>
            ) : (
                <div class="card-projet">
                    <div class="card-header">
                        <h2>{t('projects.notFound')}</h2>
                    </div>
                    <div class="card-content">
                        <p>
                            {t('projects.notFoundDesc')} {slug}
                        </p>
                    </div>
                    <div class="card-footer">
                        <a href={backToHomePath()} class="back-link">
                            {t('projects.backToHome')}
                        </a>
                    </div>
                </div>
            )
        }
    </main>
</Layout>

<style>
    .container {
        margin: 0 auto;
        padding: 20px;
    }

    .button-container {
        display: flex;
        justify-content: center;
        margin-top: 12px;
    }
    .button {
        max-width: 150px;
        height: 30px;
        position: relative;
        overflow: hidden;
        text-decoration: none;
        color: #6919ff;
        border: 1px solid #6919ff4d;
        background-color: #6919ff1a;
        border-radius: 6px;
        padding: 4px 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: #6919ff33;
        transition: left 1s ease;
    }

    .button:hover::before {
        left: 0;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        margin-bottom: 12px;
    }

    .tag {
        background: #333;
        color: white;
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 500;
    }

    .project {
        margin: 0 15vw;
    }

    @media (max-width: 768px) {
        .project {
            margin: 0;
        }
    }
</style>
