---
import projects from '../../data/projects.json';
import Layout from '../../layouts/Layout.astro';

export function getStaticPaths() {
    return projects.map((project: any) => ({
        params: {slug: project.id.toString()},
    }));
}
const {slug} = Astro.params;

// Trouver le projet correspondant
const currentProject = projects.find((p: any) => p.id === parseInt(slug || '0'));
---

<Layout>
    <main class="container">
        <a href="/" class="button">← Retour à l'accueil</a>

        {
            currentProject ? (
                <div class="project">
                    <h1>{currentProject.name}</h1>
                    <h3>
                        {currentProject.company} - {currentProject.location}
                    </h3>
                    <p>
                        <strong>{currentProject.label}</strong>
                    </p>
                    <p>
                        {currentProject.startingDate} - {currentProject.endingDate}
                    </p>
                    <div class="tags">
                        {currentProject.technologies.map((tech: string) => (
                            <span class="tag">{tech}</span>
                        ))}
                    </div>
                    <p>{currentProject.description}</p>
                    {currentProject.link && (
                        <a class="button" href={currentProject.link} target="_blank">
                            Voir le projet
                        </a>
                    )}
                </div>
            ) : (
                <div>
                    <h1>Projet non trouvé</h1>
                    <p>Le projet avec l'ID {slug} n'existe pas.</p>
                </div>
            )
        }
    </main>
</Layout>

<style>
    .container {
        margin: 0 auto;
        padding: 20px;
    }
    .button {
        color: #6919ff;
        padding: 4px 16px;
        border-radius: 6px;
        border: 1px solid #6919ff4d;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 14px;
        background-color: #6919ff1a;
        width: 100%;
        text-decoration: none;
    }

    button:hover {
        background-color: #6919ff33;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        margin-bottom: 12px;
    }

    .tag {
        background: #333;
        color: white;
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 500;
    }
</style>
